<% layout("/layouts/boilerplate") %>

<style>
    .listing-show {
        max-width: 1120px;
        margin: 0 auto;
        padding: 1.5rem 1rem;
    }
    
    .listing-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }
    
    .listing-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #222;
        margin-bottom: 0.5rem;
    }
    
    .listing-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }
    
    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.95rem;
        color: #222;
    }
    
    .meta-item i {
        color: #ff385c;
    }
    
    .meta-item.rating i {
        color: #222;
    }
    
    .listing-actions {
        display: flex;
        gap: 0.75rem;
    }
    
    .action-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border: none;
        background: transparent;
        font-size: 0.9rem;
        font-weight: 500;
        color: #222;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.2s ease;
        text-decoration: underline;
    }
    
    .action-btn:hover {
        background: #f7f7f7;
    }
    
    .action-btn.liked i {
        color: #ff385c;
    }
    
    .listing-image-container {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 2rem;
    }
    
    .listing-image {
        width: 100%;
        height: 450px;
        object-fit: cover;
    }
    
    .category-tag {
        position: absolute;
        top: 16px;
        left: 16px;
        background: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .listing-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 3rem;
    }
    
    .listing-details {
        padding-right: 2rem;
        border-right: 1px solid #ebebeb;
    }
    
    .host-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #ebebeb;
        margin-bottom: 1.5rem;
    }
    
    .host-avatar {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff385c, #e31c5f);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1.25rem;
    }
    
    .host-text h4 {
        font-weight: 600;
        color: #222;
        margin-bottom: 0.25rem;
    }
    
    .host-text p {
        color: #717171;
        margin: 0;
        font-size: 0.9rem;
    }
    
    .description-section {
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #ebebeb;
        margin-bottom: 1.5rem;
    }
    
    .description-section p {
        color: #222;
        line-height: 1.6;
        font-size: 1rem;
    }
    
    .location-section {
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #ebebeb;
        margin-bottom: 1.5rem;
    }
    
    .location-section h5 {
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    .location-text {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #717171;
    }
    
    .location-text i {
        color: #ff385c;
    }
    
    /* Price Card */
    .price-card {
        background: white;
        border: 1px solid #ddd;
        border-radius: 16px;
        padding: 1.5rem;
        position: sticky;
        top: 100px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }
    
    .price-display {
        margin-bottom: 1.5rem;
    }
    
    .price-amount {
        font-size: 1.5rem;
        font-weight: 600;
        color: #222;
    }
    
    .price-amount span {
        font-weight: 400;
        font-size: 1rem;
    }
    
    .price-tax {
        color: #717171;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }
    
    .owner-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 1rem;
    }
    
    .btn-edit {
        flex: 1;
        background: #222;
        color: white;
        border: none;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        transition: all 0.2s ease;
    }
    
    .btn-edit:hover {
        background: #000;
        color: white;
    }
    
    .btn-delete {
        flex: 1;
        background: white;
        color: #ff385c;
        border: 1px solid #ff385c;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-delete:hover {
        background: #ff385c;
        color: white;
    }
    
    /* Reviews Section */
    .reviews-section {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #ebebeb;
    }
    
    .reviews-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }
    
    .reviews-header i {
        color: #222;
    }
    
    .reviews-header h4 {
        font-weight: 600;
        margin: 0;
    }
    
    .review-form {
        background: #f7f7f7;
        padding: 1.5rem;
        border-radius: 16px;
        margin-bottom: 2rem;
    }
    
    .review-form h5 {
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    .review-form textarea {
        border-radius: 12px;
        border: 1px solid #ddd;
        padding: 1rem;
        resize: vertical;
        min-height: 100px;
    }
    
    .review-form textarea:focus {
        border-color: #222;
        box-shadow: 0 0 0 2px rgba(34,34,34,0.1);
    }
    
    .review-submit-btn {
        background: linear-gradient(135deg, #ff385c, #e31c5f);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .review-submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255,56,92,0.3);
    }
    
    .reviews-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .review-card {
        background: white;
        border: 1px solid #ebebeb;
        border-radius: 16px;
        padding: 1.25rem;
    }
    
    .review-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.75rem;
    }
    
    .reviewer-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .reviewer-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #ebebeb;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #717171;
        font-weight: 600;
    }
    
    .reviewer-name {
        font-weight: 600;
        color: #222;
    }
    
    .review-rating {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        color: #222;
        font-weight: 500;
    }
    
    .review-rating i {
        color: #ff385c;
    }
    
    .review-comment {
        color: #222;
        line-height: 1.5;
        margin-bottom: 0.75rem;
    }
    
    .review-delete-btn {
        background: transparent;
        border: 1px solid #ddd;
        color: #717171;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .review-delete-btn:hover {
        border-color: #ff385c;
        color: #ff385c;
    }
    
    @media (max-width: 991px) {
        .listing-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        
        .listing-details {
            padding-right: 0;
            border-right: none;
        }
        
        .price-card {
            position: static;
        }
        
        .reviews-grid {
            grid-template-columns: 1fr;
        }
        
        .listing-image {
            height: 300px;
        }
    }
    
    @media (max-width: 767px) {
        .listing-show {
            padding: 1rem 0;
        }
        
        .listing-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .listing-title {
            font-size: 1.35rem;
        }
        
        .listing-meta {
            gap: 0.75rem;
        }
        
        .meta-item {
            font-size: 0.85rem;
        }
        
        .listing-actions {
            width: 100%;
            justify-content: flex-start;
        }
        
        .listing-image-container {
            margin: 0 -0.75rem;
            border-radius: 0;
        }
        
        .listing-image {
            height: 250px;
            border-radius: 0;
        }
        
        .category-tag {
            font-size: 0.75rem;
            padding: 0.35rem 0.75rem;
        }
        
        .host-avatar {
            width: 48px;
            height: 48px;
            font-size: 1rem;
        }
        
        .price-card {
            padding: 1.25rem;
            border-radius: 12px;
        }
        
        .price-amount {
            font-size: 1.25rem;
        }
        
        .owner-actions {
            flex-direction: column;
        }
        
        .reviews-section {
            margin-top: 1.5rem;
            padding-top: 1.5rem;
        }
        
        .review-form {
            padding: 1rem;
            border-radius: 12px;
        }
        
        .review-card {
            padding: 1rem;
            border-radius: 12px;
        }
    }
    
    @media (max-width: 575px) {
        .listing-show {
            padding: 0.75rem 0;
        }
        
        .listing-title {
            font-size: 1.2rem;
            line-height: 1.3;
        }
        
        .listing-meta {
            flex-wrap: wrap;
            gap: 0.5rem;
        }
        
        .meta-item {
            font-size: 0.8rem;
        }
        
        .action-btn {
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
        }
        
        .listing-image {
            height: 220px;
        }
        
        .listing-content {
            gap: 1.5rem;
        }
        
        .host-info {
            gap: 0.75rem;
        }
        
        .host-text h4 {
            font-size: 0.9rem;
        }
        
        .host-text p {
            font-size: 0.8rem;
        }
        
        .description-section p,
        .location-text {
            font-size: 0.9rem;
        }
        
        .review-comment {
            font-size: 0.9rem;
        }
        
        .reviewer-avatar {
            width: 36px;
            height: 36px;
        }
    }
</style>

<div class="listing-show">
    <!-- Header -->
    <div class="listing-header">
        <div>
            <h1 class="listing-title"><%= listing.title %></h1>
            <div class="listing-meta">
                <% if (avgRating) { %>
                    <span class="meta-item rating">
                        <i class="fa-solid fa-star"></i>
                        <%= avgRating %> · <%= listing.reviews.length %> reviews
                    </span>
                <% } %>
                <span class="meta-item">
                    <i class="fa-solid fa-location-dot"></i>
                    <%= listing.location %>, <%= listing.country %>
                </span>
            </div>
        </div>
        <div class="listing-actions">
            <button class="action-btn" onclick="shareListing()">
                <i class="fa-solid fa-share-nodes"></i>
                Share
            </button>
            <button class="action-btn <%= typeof isLiked !== 'undefined' && isLiked ? 'liked' : '' %>" id="saveBtn" onclick="toggleSave()">
                <i class="<%= typeof isLiked !== 'undefined' && isLiked ? 'fa-solid' : 'fa-regular' %> fa-heart"></i>
                Save
            </button>
        </div>
    </div>
    
    <!-- Image -->
    <div class="listing-image-container">
        <img src="<%= listing.image.url %>" class="listing-image" alt="<%= listing.title %>">
        <span class="category-tag"><%= listing.category %></span>
    </div>
    
    <!-- Content Grid -->
    <div class="listing-content">
        <div class="listing-details">
            <!-- Host Info -->
            <div class="host-info">
                <div class="host-avatar">
                    <%= listing.owner ? listing.owner.username.charAt(0).toUpperCase() : '?' %>
                </div>
                <div class="host-text">
                    <h4>Hosted by <%= listing.owner ? listing.owner.username : 'Unknown Host' %></h4>
                    <p><%= listing.category %> · Entire place</p>
                </div>
            </div>
            
            <!-- Description -->
            <div class="description-section">
                <p><%= listing.description %></p>
            </div>
            
            <!-- Location -->
            <div class="location-section">
                <h5>Where you'll be</h5>
                <p class="location-text">
                    <i class="fa-solid fa-map-marker-alt"></i>
                    <%= listing.location %>, <%= listing.country %>
                </p>
            </div>
        </div>
        
        <!-- Price Card -->
        <div>
            <div class="price-card">
                <div class="price-display">
                    <p class="price-amount">
                        ₹<%= listing.price.toLocaleString("en-IN") %> <span>/ night</span>
                    </p>
                    <p class="price-tax">₹<%= Math.round(listing.price * 1.18).toLocaleString("en-IN") %> total incl. taxes</p>
                </div>
                
                <% if (avgRating) { %>
                    <div style="display: flex; align-items: center; gap: 0.5rem; padding-top: 1rem; border-top: 1px solid #ebebeb;">
                        <i class="fa-solid fa-star" style="color: #ff385c;"></i>
                        <strong><%= avgRating %></strong>
                        <span style="color: #717171;">· <%= listing.reviews.length %> reviews</span>
                    </div>
                <% } %>
                
                <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
                    <div class="owner-actions">
                        <a href="/listings/<%= listing._id %>/edit" class="btn-edit">
                            <i class="fa-solid fa-pen me-1"></i>Edit
                        </a>
                        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" style="flex: 1;">
                            <button type="submit" class="btn-delete" style="width: 100%;">
                                <i class="fa-solid fa-trash me-1"></i>Delete
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Reviews Section -->
    <div class="reviews-section">
        <div class="reviews-header">
            <i class="fa-solid fa-star"></i>
            <h4>
                <% if (avgRating) { %>
                    <%= avgRating %> · <%= listing.reviews.length %> reviews
                <% } else { %>
                    No reviews yet
                <% } %>
            </h4>
        </div>
        
        <% if(currUser) { %>
            <div class="review-form">
                <h5>Leave a review</h5>
                <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 500;">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label" style="font-weight: 500;">Your review</label>
                        <textarea name="review[comment]" id="comment" class="form-control" placeholder="Share your experience..." required></textarea>
                        <div class="invalid-feedback">Please enter your review</div>
                    </div>
                    <button type="submit" class="review-submit-btn">
                        <i class="fa-solid fa-paper-plane me-1"></i>Submit Review
                    </button>
                </form>
            </div>
        <% } %>
        
        <% if(listing.reviews.length > 0) { %>
            <div class="reviews-grid">
                <% for(let review of listing.reviews) { %>
                    <div class="review-card">
                        <div class="review-header">
                            <div class="reviewer-info">
                                <div class="reviewer-avatar">
                                    <%= review.author ? review.author.username.charAt(0).toUpperCase() : '?' %>
                                </div>
                                <span class="reviewer-name">@<%= review.author ? review.author.username : 'Anonymous' %></span>
                            </div>
                            <div class="review-rating">
                                <i class="fa-solid fa-star"></i>
                                <%= review.rating %>
                            </div>
                        </div>
                        <p class="review-comment"><%= review.comment %></p>
                        <% if(currUser && review.author && currUser._id.equals(review.author._id)) { %>
                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                <button type="submit" class="review-delete-btn">
                                    <i class="fa-solid fa-trash me-1"></i>Delete
                                </button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>
</div>

<script>
    const isLoggedIn = <%= currUser ? 'true' : 'false' %>;
    const listingId = '<%= listing._id %>';
    
    async function toggleSave() {
        if (!isLoggedIn) {
            window.location.href = '/login';
            return;
        }
        
        try {
            const response = await fetch(`/listings/${listingId}/like`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            
            const data = await response.json();
            const btn = document.getElementById('saveBtn');
            const icon = btn.querySelector('i');
            
            if (data.success) {
                if (data.isLiked) {
                    icon.className = 'fa-solid fa-heart';
                    btn.classList.add('liked');
                } else {
                    icon.className = 'fa-regular fa-heart';
                    btn.classList.remove('liked');
                }
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }
    
    function shareListing() {
        if (navigator.share) {
            navigator.share({
                title: '<%= listing.title %>',
                text: 'Check out this amazing place on Airbnb!',
                url: window.location.href
            });
        } else {
            navigator.clipboard.writeText(window.location.href);
            alert('Link copied to clipboard!');
        }
    }
</script>