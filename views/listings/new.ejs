<% layout("/layouts/boilerplate") %>

<style>
    .host-page {
        padding-bottom: 3rem;
    }
    
    .host-hero {
        background: linear-gradient(135deg, #ff385c 0%, #e31c5f 50%, #d70466 100%);
        color: white;
        padding: 4rem 0;
        margin: -1.5rem -12px 2rem -12px;
        border-radius: 0 0 40px 40px;
        position: relative;
        overflow: hidden;
    }
    
    .host-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        opacity: 0.5;
    }
    
    .host-hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
    }
    
    .host-hero h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        letter-spacing: -0.5px;
    }
    
    .host-hero p {
        font-size: 1.15rem;
        opacity: 0.95;
        max-width: 500px;
        margin: 0 auto;
    }
    
    .host-benefits {
        display: flex;
        gap: 2rem;
        margin-top: 2rem;
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .benefit-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .benefit-item i {
        font-size: 1.25rem;
        background: rgba(255,255,255,0.2);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .benefit-item span {
        font-weight: 500;
    }
    
    .form-card {
        background: white;
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        border: 1px solid #f0f0f0;
    }
    
    .form-card h3 {
        font-weight: 700;
        color: #222;
        margin-bottom: 0.5rem;
    }
    
    .form-subtitle {
        color: #717171;
        margin-bottom: 2rem;
    }
    
    .form-section {
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #ebebeb;
    }
    
    .form-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .form-section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #222;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .form-section-title i {
        color: #ff385c;
        font-size: 1rem;
    }
    
    .form-label {
        font-weight: 500;
        color: #222;
        margin-bottom: 0.5rem;
    }
    
    .form-control, .form-select {
        border-radius: 12px;
        padding: 0.875rem 1rem;
        border: 1px solid #ddd;
        transition: all 0.2s ease;
        font-size: 1rem;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #222;
        box-shadow: 0 0 0 2px rgba(34, 34, 34, 0.1);
    }
    
    .form-control::placeholder {
        color: #b0b0b0;
    }
    
    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }
    
    .file-upload-wrapper {
        position: relative;
        border: 2px dashed #ddd;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        transition: all 0.2s ease;
        background: #fafafa;
        cursor: pointer;
    }
    
    .file-upload-wrapper:hover {
        border-color: #ff385c;
        background: #fff5f7;
    }
    
    .file-upload-wrapper input[type="file"] {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }
    
    .file-upload-icon {
        font-size: 2.5rem;
        color: #ff385c;
        margin-bottom: 0.75rem;
    }
    
    .file-upload-text {
        color: #717171;
        font-size: 0.9rem;
    }
    
    .file-upload-text strong {
        color: #ff385c;
    }
    
    .price-input-group {
        position: relative;
    }
    
    .price-input-group .currency-symbol {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #717171;
        font-weight: 500;
    }
    
    .price-input-group input {
        padding-left: 2.5rem;
    }
    
    .category-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.75rem;
    }
    
    .category-option {
        position: relative;
    }
    
    .category-option input {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
        z-index: 2;
    }
    
    .category-option label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1rem 0.5rem;
        border: 2px solid #ebebeb;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
    }
    
    .category-option label i {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: #717171;
    }
    
    .category-option label span {
        font-size: 0.75rem;
        font-weight: 500;
        color: #717171;
    }
    
    .category-option input:checked + label {
        border-color: #222;
        background: #f7f7f7;
    }
    
    .category-option input:checked + label i,
    .category-option input:checked + label span {
        color: #222;
    }
    
    .category-option:hover label {
        border-color: #222;
    }
    
    .submit-btn {
        background: linear-gradient(135deg, #ff385c 0%, #e31c5f 100%);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        width: 100%;
    }
    
    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(255, 56, 92, 0.3);
    }
    
    .submit-btn i {
        margin-right: 0.5rem;
    }
    
    /* Tips Sidebar */
    .tips-card {
        background: #f7f7f7;
        border-radius: 16px;
        padding: 1.5rem;
        position: sticky;
        top: 100px;
    }
    
    .tips-card h5 {
        font-weight: 700;
        color: #222;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .tips-card h5 i {
        color: #ff385c;
    }
    
    .tip-item {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e8e8e8;
    }
    
    .tip-item:last-child {
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: none;
    }
    
    .tip-item i {
        color: #00a699;
        font-size: 1rem;
        margin-top: 0.25rem;
    }
    
    .tip-item p {
        margin: 0;
        color: #717171;
        font-size: 0.9rem;
        line-height: 1.5;
    }
    
    @media (max-width: 991px) {
        .category-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .host-hero {
            padding: 3rem 0;
        }
        
        .host-hero h1 {
            font-size: 2rem;
        }
        
        .tips-card {
            margin-top: 2rem;
            position: static;
        }
    }
    
    @media (max-width: 767px) {
        .host-hero {
            padding: 2.5rem 0;
            margin: -1.5rem -0.75rem 1.5rem;
            border-radius: 0 0 24px 24px;
        }
        
        .host-hero h1 {
            font-size: 1.65rem;
            line-height: 1.3;
        }
        
        .host-hero p {
            font-size: 0.95rem;
        }
        
        .host-benefits {
            flex-direction: column;
            gap: 0.75rem;
        }
        
        .benefit-item {
            justify-content: flex-start;
        }
        
        .benefit-item i {
            width: 34px;
            height: 34px;
            font-size: 0.95rem;
        }
        
        .benefit-item span {
            font-size: 0.9rem;
        }
        
        .form-card {
            padding: 1.5rem;
            border-radius: 16px;
        }
        
        .form-card h3 {
            font-size: 1.3rem;
        }
        
        .form-section-title {
            font-size: 1rem;
        }
        
        .category-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.5rem;
        }
        
        .category-option label {
            padding: 0.75rem 0.35rem;
        }
        
        .category-option label i {
            font-size: 1.25rem;
        }
        
        .category-option label span {
            font-size: 0.7rem;
        }
    }
    
    @media (max-width: 575px) {
        .host-hero {
            padding: 2rem 0;
            margin: -1rem -0.75rem 1.25rem;
        }
        
        .host-hero h1 {
            font-size: 1.4rem;
        }
        
        .host-hero p {
            font-size: 0.85rem;
        }
        
        .benefit-item i {
            width: 30px;
            height: 30px;
            font-size: 0.85rem;
        }
        
        .benefit-item span {
            font-size: 0.85rem;
        }
        
        .form-card {
            padding: 1.25rem;
        }
        
        .form-card h3 {
            font-size: 1.2rem;
        }
        
        .form-subtitle {
            font-size: 0.85rem;
        }
        
        .form-section {
            margin-bottom: 1.25rem;
            padding-bottom: 1.25rem;
        }
        
        .form-section-title {
            font-size: 0.95rem;
        }
        
        .form-control, .form-select {
            padding: 0.75rem;
            font-size: 0.9rem;
        }
        
        .file-upload-wrapper {
            padding: 1.25rem;
        }
        
        .file-upload-icon {
            font-size: 1.75rem;
        }
        
        .file-upload-text {
            font-size: 0.8rem;
        }
        
        .category-option label {
            padding: 0.6rem 0.25rem;
        }
        
        .category-option label i {
            font-size: 1.1rem;
            margin-bottom: 0.35rem;
        }
        
        .category-option label span {
            font-size: 0.65rem;
        }
        
        .submit-btn {
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
        }
        
        .tips-card {
            padding: 1.25rem;
            margin-top: 1.5rem;
        }
        
        .tips-card h5 {
            font-size: 1rem;
        }
        
        .tip-item p {
            font-size: 0.85rem;
        }
    }
</style>

<div class="host-page">
    <!-- Hero Section -->
    <div class="host-hero">
        <div class="container">
            <div class="host-hero-content">
                <h1>Share your space, earn extra income</h1>
                <p>List your property on Wanderlust and start hosting guests from around the world.</p>
                <div class="host-benefits">
                    <div class="benefit-item">
                        <i class="fa-solid fa-shield-halved"></i>
                        <span>Host protection</span>
                    </div>
                    <div class="benefit-item">
                        <i class="fa-solid fa-wallet"></i>
                        <span>Easy payouts</span>
                    </div>
                    <div class="benefit-item">
                        <i class="fa-solid fa-headset"></i>
                        <span>24/7 support</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="form-card">
                    <h3>Create Your Listing</h3>
                    <p class="form-subtitle">Fill in the details below to share your space with travelers.</p>
                    
                    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                        <!-- Basic Info -->
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fa-solid fa-pen"></i>
                                Basic Information
                            </div>
                            
                            <div class="mb-3">
                                <label for="title" class="form-label">Listing Title</label>
                                <input name="listing[title]" placeholder="e.g., Cozy beachfront villa with ocean views" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please add a title for your listing</div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="listing[description]" class="form-control" placeholder="Describe what makes your place special. Mention the space, neighborhood, and what guests can expect..." required></textarea>
                                <div class="invalid-feedback">Please add a description</div>
                            </div>
                        </div>
                        
                        <!-- Image Upload -->
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fa-solid fa-camera"></i>
                                Listing Photo
                            </div>
                            
                            <div class="file-upload-wrapper">
                                <input name="listing[image]" type="file" accept="image/*" required id="imageUpload">
                                <div class="file-upload-icon">
                                    <i class="fa-solid fa-cloud-arrow-up"></i>
                                </div>
                                <p class="file-upload-text">
                                    <strong>Click to upload</strong> or drag and drop<br>
                                    <small>PNG, JPG or WEBP (Max 10MB)</small>
                                </p>
                            </div>
                            <div id="imagePreview" style="margin-top: 1rem; display: none;">
                                <img id="previewImg" style="max-width: 200px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                            </div>
                        </div>
                        
                        <!-- Location -->
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fa-solid fa-location-dot"></i>
                                Location Details
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="country" class="form-label">Country</label>
                                    <input name="listing[country]" placeholder="e.g., India" type="text" class="form-control" required>
                                    <div class="invalid-feedback">Please enter the country</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="location" class="form-label">City / Location</label>
                                    <input name="listing[location]" placeholder="e.g., Goa, Baga Beach" type="text" class="form-control" required>
                                    <div class="invalid-feedback">Please enter the location</div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Pricing -->
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fa-solid fa-indian-rupee-sign"></i>
                                Pricing
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="price" class="form-label">Price per night</label>
                                    <div class="price-input-group">
                                        <span class="currency-symbol">₹</span>
                                        <input name="listing[price]" type="number" placeholder="2500" class="form-control" required min="1">
                                    </div>
                                    <div class="invalid-feedback">Please enter a valid price</div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Category -->
                        <div class="form-section">
                            <div class="form-section-title">
                                <i class="fa-solid fa-tags"></i>
                                Category
                            </div>
                            
                            <div class="category-grid">
                                <% 
                                const categoryIcons = {
                                    'Beachfront': 'fa-umbrella-beach',
                                    'Mountains': 'fa-mountain-sun',
                                    'Iconic Cities': 'fa-city',
                                    'Castles': 'fa-chess-rook',
                                    'Camping': 'fa-campground',
                                    'Luxury': 'fa-gem',
                                    'Countryside': 'fa-tree',
                                    'Boats': 'fa-sailboat'
                                };
                                %>
                                <% for(let cat of categories) { %>
                                    <div class="category-option">
                                        <input type="radio" name="listing[category]" value="<%= cat %>" id="cat-<%= cat.replace(/\s/g, '-') %>" required>
                                        <label for="cat-<%= cat.replace(/\s/g, '-') %>">
                                            <i class="fa-solid <%= categoryIcons[cat] || 'fa-house' %>"></i>
                                            <span><%= cat %></span>
                                        </label>
                                    </div>
                                <% } %>
                            </div>
                            <div class="invalid-feedback">Please select a category</div>
                        </div>
                        
                        <button type="submit" class="submit-btn">
                            <i class="fa-solid fa-plus"></i>
                            Create Listing
                        </button>
                    </form>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="tips-card">
                    <h5><i class="fa-solid fa-lightbulb"></i> Hosting Tips</h5>
                    
                    <div class="tip-item">
                        <i class="fa-solid fa-check-circle"></i>
                        <p><strong>Great photos matter</strong> – Listings with bright, clear photos get more bookings.</p>
                    </div>
                    
                    <div class="tip-item">
                        <i class="fa-solid fa-check-circle"></i>
                        <p><strong>Be descriptive</strong> – Help guests understand what makes your space unique.</p>
                    </div>
                    
                    <div class="tip-item">
                        <i class="fa-solid fa-check-circle"></i>
                        <p><strong>Set competitive pricing</strong> – Research similar listings in your area.</p>
                    </div>
                    
                    <div class="tip-item">
                        <i class="fa-solid fa-check-circle"></i>
                        <p><strong>Respond quickly</strong> – Fast response times lead to better reviews.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Image preview
    document.getElementById('imageUpload').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('previewImg').src = e.target.result;
                document.getElementById('imagePreview').style.display = 'block';
            }
            reader.readAsDataURL(file);
        }
    });
</script>