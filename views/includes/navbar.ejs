<style>
  .navbar {
    background: #fff !important;
    padding: 0.75rem 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  
  .navbar-brand {
    font-size: 1.75rem;
    color: #ff385c !important;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: transform 0.2s ease;
  }
  
  .navbar-brand:hover {
    transform: scale(1.05);
  }
  
  .navbar-brand span {
    font-size: 1.25rem;
    color: #ff385c;
    font-weight: 700;
    letter-spacing: -0.5px;
  }
  
  .nav-link {
    font-weight: 500;
    color: #222 !important;
    padding: 0.5rem 1rem !important;
    border-radius: 20px;
    transition: all 0.2s ease;
    margin: 0 0.25rem;
  }
  
  .nav-link:hover {
    background: #f7f7f7;
    color: #ff385c !important;
  }
  
  .nav-link.host-link {
    background: transparent;
    border: 1px solid transparent;
  }
  
  .nav-link.host-link:hover {
    background: #f7f7f7;
  }
  
  .nav-link.wishlist-link {
    color: #ff385c !important;
  }
  
  .nav-link.wishlist-link i {
    margin-right: 0.25rem;
  }
  
  .search-form {
    display: flex;
    align-items: center;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 40px;
    padding: 0.25rem 0.25rem 0.25rem 1rem;
    transition: box-shadow 0.3s ease;
    margin: 0 1rem;
  }
  
  .search-form:focus-within {
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.12);
    border-color: #ff385c;
  }
  
  .search-inp {
    border: none !important;
    box-shadow: none !important;
    padding: 0.5rem 0.5rem;
    font-size: 0.95rem;
    min-width: 200px;
    background: transparent;
  }
  
  .search-inp:focus {
    outline: none;
    box-shadow: none !important;
  }
  
  .search-btn {
    background: linear-gradient(135deg, #ff385c 0%, #e31c5f 100%);
    color: #fff !important;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    padding: 0;
  }
  
  .search-btn:hover {
    transform: scale(1.05);
    background: linear-gradient(135deg, #e31c5f 0%, #c81e4e 100%);
    color: #fff !important;
  }
  
  .search-btn i {
    margin: 0 !important;
    font-size: 0.9rem;
  }
  
  .auth-buttons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: 1rem;
  }
  
  .btn-login {
    background: transparent;
    color: #222;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .btn-login:hover {
    background: #f7f7f7;
  }
  
  .btn-signup {
    background: linear-gradient(135deg, #ff385c 0%, #e31c5f 100%);
    color: #fff !important;
    border: none;
    padding: 0.5rem 1.25rem;
    border-radius: 20px;
    font-weight: 600;
    transition: all 0.2s ease;
  }
  
  .btn-signup:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 12px rgba(255, 56, 92, 0.3);
  }
  
  .btn-logout {
    background: #f7f7f7;
    color: #222;
    border: 1px solid #ddd;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .btn-logout:hover {
    background: #eee;
    border-color: #ccc;
  }
  
  .user-menu {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  @media (max-width: 991px) {
    .navbar {
      padding: 0.75rem 1rem;
    }
    
    .search-form {
      margin: 1rem 0;
      width: 100%;
    }
    
    .search-inp {
      flex: 1;
    }
    
    .auth-buttons {
      margin: 1rem 0;
      margin-left: 0;
    }
    
    .nav-link {
      padding: 0.75rem 1rem !important;
    }
  }
  
  @media (max-width: 575px) {
    .navbar {
      padding: 0.5rem 0.75rem;
    }
    
    .navbar-brand {
      font-size: 1.4rem;
    }
    
    .navbar-brand span {
      font-size: 0.95rem;
    }
    
    .search-form {
      padding: 0.2rem 0.2rem 0.2rem 0.75rem;
    }
    
    .search-inp {
      min-width: unset;
      font-size: 0.9rem;
      padding: 0.4rem 0.5rem;
    }
    
    .search-btn {
      width: 36px;
      height: 36px;
    }
    
    .user-menu {
      flex-direction: column;
      align-items: stretch;
      gap: 0.5rem;
      width: 100%;
      padding-top: 0.5rem;
      border-top: 1px solid #eee;
    }
    
    .nav-link.host-link,
    .nav-link.wishlist-link {
      text-align: left;
      padding: 0.75rem 0 !important;
      border-radius: 0;
    }
    
    .auth-buttons {
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
    }
    
    .btn-login,
    .btn-signup,
    .btn-logout {
      width: 100%;
      text-align: center;
      padding: 0.75rem 1rem;
      border-radius: 12px;
    }
  }
</style>

<nav class="navbar navbar-expand-lg sticky-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fa-solid fa-compass me-1"></i>
        <span>Wanderlust</span>
      </a>
      <button 
        class="navbar-toggler" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#navbarNavAltMarkup" 
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">
            Explore
          </a>
        </div>
        
        <form class="search-form mx-auto" role="search" action="/listings" method="GET">
          <input 
            class="search-inp" 
            type="search" 
            name="search"
            placeholder="Search destinations..." 
            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
            autocomplete="off"
          >
          <button class="search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>

        <div class="navbar-nav user-menu">
          <a class="nav-link host-link" href="/listings/new">
            <i class="fa-solid fa-home me-1"></i>Host your place
          </a>
          <% if(currUser){ %>
            <a class="nav-link wishlist-link" href="/listings/wishlist">
              <i class="fa-solid fa-heart"></i>Wishlist
            </a>
          <% } %>
          <div class="auth-buttons">
            <% if(!currUser){ %>
              <a class="btn btn-login" href="/login">Log in</a>
              <a class="btn btn-signup" href="/signup">Sign up</a>
            <% } else { %>
              <a class="btn btn-logout" href="/logout">
                <i class="fa-solid fa-right-from-bracket me-1"></i>Log out
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </nav>